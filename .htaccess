<?php
// backend/.htaccess
// Apache configuration for URL rewriting

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/

    # Remove .php extension
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
?>
